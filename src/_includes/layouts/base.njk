<!doctype html>
<html lang="en-ca" class="no-js">
    <head>
        <meta charset="utf-8">
        <title>{{ site.title }}</title>
        <link rel="stylesheet" type="text/css" href="{{ manifest['/css/idrc.css'] }}" />
        <script>document.documentElement.classList.remove('no-js');</script>
        <script type="text/javascript" src="{{ manifest['/js/idrc.js'] }}" defer></script>
        {% block head %}
        {% endblock %}
    </head>
    <body class="flex flex-col justify-start min-h-screen">
        {% include "partials/global/header.njk" %}
        <main>
            {% block content %}
            {% endblock content %}
        </main>
        {% include "partials/global/footer.njk" %}
    </body>
</html>
